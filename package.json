{
  "name": "sanity-plugin-color-input",
  "version": "1.1.0",
  "description": "Professional color picker with gradient support for Sanity Studio v3, v4, and v5",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "default": "./dist/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --external react,react-dom,sanity,@sanity/ui,styled-components",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": [
    "sanity",
    "sanity-plugin",
    "color-picker",
    "gradient",
    "sanity-v3",
    "sanity-v4",
    "sanity-v5"
  ],
  "author": "Code-Journey <codejourney.info@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/Code-Journey-77/sanity-plugin-color-input"
  },
  "bugs": {
    "url": "https://github.com/Code-Journey-77/sanity-plugin-color-input/issues"
  },
  "homepage": "https://github.com/Code-Journey-77/sanity-plugin-color-input#readme",
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "sanity": "^3.0.0 || ^4.0.0 || ^5.0.0",
    "styled-components": "^6.0.0"
  },
  "devDependencies": {
    "@sanity/ui": "^3.1.13",
    "@types/react": "^19.2.14",
    "lefthook": "^2.1.1",
    "prettier": "^3.8.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "sanity": "^5.12.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
